{
  "name": "@hiveio/internal",
  "version": "1.0.0",
  "description": "Internal utilities for Hive components",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./decorators": {
      "types": "./dist/decorators.d.ts",
      "default": "./dist/decorators.js"
    },
    "./hive-api": {
      "types": "./dist/hive-api.d.ts",
      "default": "./dist/hive-api.js"
    },
    "./styles": {
      "types": "./dist/styles.d.ts",
      "default": "./dist/styles.js"
    }
  },
  "scripts": {
    "build": "tsc && vite build",
    "clean": "rm -rf dist tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@hiveio/content-renderer": "^2.3.1",
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
